 @model EmployerViewModel
@{
    ViewData["Title"] = "Register";
}


    <div class="min-h-screen flex items-center justify-center bg-gray-50 p-4">
        <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold text-center text-blue-600">Register as Employer</h2>
            <form asp-action="Register" class="space-y-6 mt-4">
                <!-- Email Field -->
                <div class="relative">
                    <label asp-for="Email" class="text-gray-700 font-medium"></label>
                    <input asp-for="Email"
                           class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400 transition" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>

                <!-- Password Field -->
                <div class="relative">
                    <label asp-for="Password" class="text-gray-700 font-medium"></label>
                    <input asp-for="Password" type="password"
                           class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400 transition" />
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>

                <!-- Confirm Password Field -->
                <div class="relative">
                    <label asp-for="ConfirmPassword" class="text-gray-700 font-medium"></label>
                    <input asp-for="ConfirmPassword" type="password"
                           class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400 transition" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
                </div>

                <!-- Register Button -->
                <button type="submit" class="w-full py-2 px-4 bg-blue-500 text-white font-bold rounded hover:bg-blue-600 transition duration-200">
                    Register as Employer
                </button>
            </form>
        </div>
    </div>
